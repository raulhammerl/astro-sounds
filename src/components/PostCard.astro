---
import EmojiReactions from './EmojiReactions.astro';
import Comments from './Comments.astro';
const { post } = Astro.props;
const { title, pubDate, author, youtubeId } = post.data;

// Fetch the high-quality thumbnail from YouTube's servers
const thumbnailUrl = `https://img.youtube.com/vi/${youtubeId}/hqdefault.jpg`;
---

<article class="cell">
  <div class="post-meta">
    {pubDate.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' })} 
    &nbsp; {author}
  </div>
  
  <a class="post-link" href={`/posts/${post.slug}`}>
    {title}
  </a>

  {youtubeId && (
    <div class="video-placeholder" data-id={youtubeId} data-title={title}>
      <img src={thumbnailUrl} alt={title} loading="lazy" />
      <div class="play-button">â–¶</div>
    </div>
  )}

  <EmojiReactions slug={post.slug} />

  <Comments slug={post.slug} />

</article>

<script>
  // Handles the "Lite YouTube" logic: Swap thumbnail for iframe on click
  const placeholders = document.querySelectorAll('.video-placeholder');

  placeholders.forEach(wrapper => {
    wrapper.addEventListener('click', () => {
      const id = wrapper.getAttribute('data-id');
      const title = wrapper.getAttribute('data-title');
      
      const iframe = document.createElement('iframe');
      iframe.setAttribute('src', `https://www.youtube.com/embed/${id}?autoplay=1`);
      iframe.setAttribute('title', title || 'Video');
      iframe.setAttribute('frameborder', '0');
      iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture');
      iframe.setAttribute('allowfullscreen', 'true');
      
      wrapper.innerHTML = '';
      wrapper.appendChild(iframe);
    });
  });
</script>

<style>
  .cell {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 5rem; 
    padding-bottom: 2rem;
  }

  .post-meta {
    font-size: 0.8rem;
    margin-bottom: 0.75rem;
    background: #eeeeee;
    color: #000000;
    padding: 2px 8px;
    text-transform: uppercase;
    font-weight: 700;
  }

  .post-link {
    font-size: 1.5rem;
    font-weight: 800;
    text-decoration: none;
    color: var(--text);
    text-transform: uppercase;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .video-placeholder {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: #000;
    cursor: pointer;
    position: relative;
    border: 1px solid #000;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .video-placeholder img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .video-placeholder:hover img {
    opacity: 1;
  }

  .play-button {
    position: absolute;
    width: 60px;
    height: 40px;
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    border: 2px solid #fff;
    z-index: 2;
    pointer-events: none;
  }

  .video-placeholder:hover .play-button {
    background: #fff;
    color: #000;
    border-color: #000;
  }

  .video-placeholder :global(iframe) {
    width: 100%;
    height: 100%;
  }
</style>
