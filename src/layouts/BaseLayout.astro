---
import "../styles/global.css";
const { title = "Sounds" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700;800&display=swap"
      rel="stylesheet"
    />

    <script is:inline>
      // 1. THIS RUNS PERMANENTLY IN THE HEAD
      function applyTheme() {
        const localStorageTheme = localStorage.getItem("theme");
        const systemTheme = window.matchMedia("(prefers-color-scheme: dark)")
          .matches
          ? "dark"
          : "light";

        // Priority: Saved Preference > System Preference
        const theme = localStorageTheme || systemTheme;
        document.documentElement.setAttribute("data-theme", theme);
      }

      // Initialize immediately
      applyTheme();

      // 2. THE SECRET SAUCE: The "Eternal" System Listener
      const mediaQuery = window.matchMedia("(prefers-color-scheme: dark)");

      const handleSystemChange = (e) => {
        // If the user hasn't set a manual override, follow the system instantly
        if (!localStorage.getItem("theme")) {
          document.documentElement.setAttribute(
            "data-theme",
            e.matches ? "dark" : "light",
          );
          // Dispatch custom event to update the button text if it exists on the page
          window.dispatchEvent(new Event("theme-changed"));
        }
      };

      // Support old and new browsers
      mediaQuery.addEventListener
        ? mediaQuery.addEventListener("change", handleSystemChange)
        : mediaQuery.addListener(handleSystemChange);
    </script>
  </head>

  <body>
    <div class="centered-container">
      <header class="site-header">
        <a href="/" class="site-title">SOUNDS</a>
        <div class="separator">
          ------------------------------------------------------------
        </div>
        <nav class="links">
          <a href="/" class="page-link">[FEED]</a>
          <a href="/search" class="page-link">[SEARCH]</a>
          <a href="/about" class="page-link">[INFO]</a>

          <button id="theme-toggle" class="page-link">
            [<span id="theme-text">THEME</span>]
          </button>
        </nav>
        <div class="separator">
          ------------------------------------------------------------
        </div>
      </header>

      <main class="page-content">
        <slot />
      </main>
    </div>

    <script>
      function setupToggle() {
        const toggle = document.getElementById("theme-toggle");
        const themeText = document.getElementById("theme-text");

        const updateText = () => {
          const currentTheme =
            document.documentElement.getAttribute("data-theme");
          if (themeText) {
            themeText.innerText = currentTheme === "dark" ? "LIGHT" : "DARK";
          }
        };

        // Set initial text
        updateText();

        // Manual Click
        toggle?.addEventListener("click", () => {
          const currentTheme =
            document.documentElement.getAttribute("data-theme");
          const newTheme = currentTheme === "dark" ? "light" : "dark";

          document.documentElement.setAttribute("data-theme", newTheme);
          localStorage.setItem("theme", newTheme);
          updateText();
        });

        // Listen for the system change event from the head script
        window.addEventListener("theme-changed", updateText);
      }

      // Run on load
      setupToggle();
      // Run after Astro page swaps (essential for View Transitions)
      document.addEventListener("astro:after-swap", setupToggle);
    </script>
  </body>
</html>
