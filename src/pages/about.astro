---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="SYSTEM_INFO">
  <main class="info-container">
    <section class="manifest">
      <div class="terminal-header">-- ABOUT --------------------------</div>

      <h1>SOUNDS</h1>

      <div class="description">
        <p>This is a private portal for sharing music between friends.</p>
      </div>

      <div class="grid">
        <div class="grid-item">
          <h3>[PURPOSE]</h3>
          <p>
            Documenting the sonic landscape of our collective focus. Music for
            coding, dreaming, and existing.
          </p>
        </div>

        <div class="grid-item">
          <h3>[AUTHORS]</h3>
          <p>
            A closed loop of contributors. If you have the secret link, you have
            the power to broadcast.
          </p>
        </div>
      </div>

      <div class="separator">
        --------------------------------------------------
      </div>

      <div class="footer-links">
        <a href="/" class="cmd-link">&larr; RETURN_TO_FEED</a>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .info-container {
    max-width: 700px;
    margin: 6rem auto;
    padding: 0 1.5rem;
    font-family: var(--font-mono);
  }

  .manifest {
    /* Uses var(--text) for the border so it's black in light and white in dark */
    border: 1px solid var(--text);
    padding: 2.5rem;
    background: var(--bg);
    /* Updated shadow: using var(--meta-bg) to keep the 3D effect subtle in dark mode */
    box-shadow: 10px 10px 0px var(--meta-bg);
    transition: all 0.3s ease;
  }

  .terminal-header {
    color: var(--text-muted);
    font-size: 0.7rem;
    font-weight: 800;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 900;
    margin: 0 0 1.5rem 0;
    letter-spacing: -1px;
    text-transform: uppercase;
    color: var(--text);
  }

  .description p {
    font-size: 1.1rem;
    line-height: 1.5;
    margin-bottom: 2rem;
    color: var(--text);
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 3rem;
  }

  h3 {
    font-size: 0.8rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .grid-item p {
    font-size: 0.85rem;
    line-height: 1.4;
    color: var(--text-muted);
  }

  .separator {
    margin: 3rem 0;
    color: var(--separator-color);
    letter-spacing: 2px;
  }

  .footer-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .cmd-link {
    text-decoration: none;
    font-weight: 800;
    color: var(--text);
    font-size: 0.9rem;
  }

  .cmd-link:hover {
    text-decoration: underline;
  }

  .status-indicator {
    font-size: 0.7rem;
    color: #00ff00; /* Classic terminal green remains as a theme accent */
    font-weight: 800;
  }

  @media (max-width: 600px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
