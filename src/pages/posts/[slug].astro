---
// src/pages/posts/[slug].astro
import { supabase } from "../../lib/supabase";
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";

// 1. Get the slug from the URL
const { slug } = Astro.params;

// 2. Fetch the specific post from Supabase using the slug
const { data: post, error } = await supabase
  .from("posts")
  .select("*")
  .eq("slug", slug)
  .single(); // We only want one result

// 3. Handle 404 if post doesn't exist
if (error || !post) {
  return Astro.redirect("/404");
}
---

<BaseLayout title={`${post.artist} - ${post.title}`}>
  <main class="single-post-wrapper">
    <div class="navigation-header">
      <a href="/" class="back-link">
        <span class="arrow">‚Üê</span> [RETURN_TO_FEED]
      </a>
    </div>

    <PostCard post={post} />
  </main>
</BaseLayout>

<style>
  .single-post-wrapper {
    max-width: 800px;
    margin: 4rem auto;
    padding: 0 1rem;
  }

  .navigation-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    font-family: var(--font-mono);
  }

  .back-link {
    text-decoration: none;
    color: var(--text-muted);
    font-size: 0.8rem;
    font-weight: 700;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--text);
  }

  .arrow {
    margin-right: 0.5rem;
  }

  .system-label {
    font-size: 0.7rem;
    color: var(--separator-color);
    letter-spacing: 0.1em;
  }
</style>
