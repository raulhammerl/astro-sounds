---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
import { supabase } from "../lib/supabase";

// Fetch all posts from your new Supabase table
const { data: posts, error } = await supabase
  .from("posts")
  .select("*")
  .order("created_at", { ascending: false });

if (error) {
  console.error("Database fetch error:", error);
}
---

<BaseLayout title="sounds">
  <main class="home-feed">
    <ul class="posts-listing" style="list-style: none; padding: 0;">
      {
        posts && posts.length > 0 ? (
          posts.map((post) => (
            <li>
              <PostCard post={post} />
            </li>
          ))
        ) : (
          <li class="empty-state">
            <p>NO_TRANSMISSIONS_FOUND_</p>
            <a href="/post-new-track" class="admin-link">
              ADD_FIRST_TRACK_
            </a>
          </li>
        )
      }
    </ul>
  </main>
</BaseLayout>

<style>
  .home-feed {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  .terminal-banner {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: #888;
    margin-bottom: 3rem;
    text-align: center;
  }
  .empty-state {
    text-align: center;
    font-family: var(--font-mono);
    margin-top: 5rem;
    color: #bcbcbc;
  }
  .admin-link {
    display: inline-block;
    margin-top: 1rem;
    color: #000;
    text-decoration: underline;
    font-weight: 800;
  }
</style>
