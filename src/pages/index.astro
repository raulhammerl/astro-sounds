---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
import { supabase } from "../lib/supabase";

const currentPage = Astro.url.searchParams.get("page")
  ? parseInt(Astro.url.searchParams.get("page"))
  : 1;
const pageSize = 10;
const from = (currentPage - 1) * pageSize;
const to = from + pageSize - 1;

// Fetch a paginated list of posts and the total count
const {
  data: posts,
  error,
  count,
} = await supabase
  .from("posts")
  .select("*", { count: "exact" })
  .order("created_at", { ascending: false })
  .range(from, to);

if (error) {
  console.error("Database fetch error:", error);
}

const totalPages = Math.ceil(count / pageSize);

// Generate page numbers for pagination control
const pagesToShow = 2; // Number of pages to show before and after current page
let startPage = Math.max(1, currentPage - pagesToShow);
let endPage = Math.min(totalPages, currentPage + pagesToShow);

const pageNumbers = [];
for (let i = startPage; i <= endPage; i++) {
  pageNumbers.push(i);
}
---

<BaseLayout title="sounds">
  <main class="home-feed">
    <ul class="posts-listing" style="list-style: none; padding: 0;">
      {
        posts && posts.length > 0 ? (
          posts.map((post) => (
            <li>
              <PostCard post={post} />
            </li>
          ))
        ) : (
          <li class="empty-state">
            <p>NO_TRANSMISSIONS_FOUND_</p>
            <a href="/post-new-track" class="admin-link">
              ADD_FIRST_TRACK_
            </a>
          </li>
        )
      }
    </ul>

    <div class="pagination-controls">
      {
        currentPage > 1 && (
          <a href="/?page=1" class="pagination-link">
            [FIRST]
          </a>
        )
      }
      {
        currentPage > 1 && (
          <a href={`/?page=${currentPage - 1}`} class="pagination-link">
            [PREV]
          </a>
        )
      }

      {startPage > 1 && <span class="pagination-ellipsis">...</span>}

      {pageNumbers.map((p) => (
        <a
          href={`/?page=${p}`}
          class:list={["pagination-link", { active: p === currentPage }]}
        >
          {p}
        </a>
      ))}

      {endPage < totalPages && <span class="pagination-ellipsis">...</span>}

      {
        currentPage < totalPages && (
          <a href={`/?page=${currentPage + 1}`} class="pagination-link">
            [NEXT]
          </a>
        )
      }
      {
        currentPage < totalPages && (
          <a href={`/?page=${totalPages}`} class="pagination-link">
            [LAST]
          </a>
        )
      }
    </div>
  </main>
</BaseLayout>

<style>
  .terminal-banner {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: #888;
    margin-bottom: 3rem;
    text-align: center;
  }
  .empty-state {
    text-align: center;
    font-family: var(--font-mono);
    margin-top: 5rem;
    color: #bcbcbc;
  }
  .admin-link {
    display: inline-block;
    margin-top: 1rem;
    color: #000;
    text-decoration: underline;
    font-weight: 800;
  }
  .pagination-controls {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 3rem;
    font-family: var(--font-mono);
    align-items: center;
  }
  .pagination-link {
    color: var(--text);
    text-decoration: none;
    font-weight: 800;
    padding: 0.25rem 0.5rem;
    border: 1px solid transparent;
  }
  .pagination-link:hover {
    text-decoration: underline;
  }
  .pagination-link.active {
    border: 1px solid var(--text);
    background-color: var(--text);
    color: var(--bg);
  }
  .pagination-ellipsis {
    color: var(--text-muted);
  }
</style>
